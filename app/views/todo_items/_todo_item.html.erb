<% if todo_item.complete? %>
<li class="list-group-item d-flex justify-content-between align-items-center">
    <span style="text-decoration:line-through;"><%= todo_item.content %> </span>
    <span>
        <%= link_to todo_list_todo_item_path(@todo_list, todo_item), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger", style: "color:white" do %>
        <i class="fa fa-trash"></i>
        <% end %>
        <%= link_to toggle_todo_list_todo_item_path(@todo_list, todo_item), method: :patch, class: "btn btn-info", style: "color:white" do %>
        <i class="fa fa-check"></i>
        <% end %>
    </span>
</li>
<% else %>
<li class="list-group-item d-flex justify-content-between align-items-center">
    <span><%= todo_item.content %></span>
    <span>
        <%= link_to todo_list_todo_item_path(@todo_list, todo_item), method: :delete, data: { confirm: t('main.confirm')}, class: "btn btn-danger", style: "color:white" do %>
        <i class="fa fa-trash"></i>
        <% end %>
        <%= link_to toggle_todo_list_todo_item_path(@todo_list, todo_item), method: :patch, class: "btn btn-info", style: "color:white" do %>
        <i class="fa fa-check"></i>
        <% end %>
    </span>
</li>
<% end %>