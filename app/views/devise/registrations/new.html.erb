<div class="container" style="margin-top: 50px">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Register</h1>


            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email" %>
            </div>

            <div class="form-group">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: t('registration.password')  %>
            </div>

            <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: t('registration.password_confirmation') %>
            </div>

            <div class="actions">
                <%= f.submit "Register", class: "btn btn-primary" %>
            </div>

            <%= render "devise/shared/links" %>
            <% end %>

        </div>
    </div>
</div>