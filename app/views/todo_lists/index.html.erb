<div class="jumbotron">
    <div class="container">
        <h1 class="display-4"><%= t('main.todo_lists') %></h1>
        <p class="lead"><%= t('main.todo_list_desc') %></p>
        <hr class="my-4">
        <%= link_to t('main.start_new_list'), new_todo_list_path, class: "btn btn-primary btn-xs", style: "color:white" %>
    </div>
</div>

<div class="row">
    <% @todo_lists.each do |todo_list| %>

    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= todo_list.title %></h5>
                <p class="card-text"><%= todo_list.description %></p>
                <p style="font-style:italic"><%= time_ago_in_words(todo_list.created_at) %></p>
                <%= link_to todo_list, class: "btn btn-primary", style: "color:white" do %>
                <i class="fa fa-info"></i>
                <% end %>
                <%= link_to edit_todo_list_path(todo_list), class: "btn btn-warning", style: "color:white" do %>
                <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to todo_list, method: :delete, data: { confirm: t('main.confirm') }, class: "btn btn-danger", style: "color:white" do %>
                <i class="fa fa-trash"></i>
                <% end %>
            </div>
        </div>
    </div>

    <% end %>
</div>